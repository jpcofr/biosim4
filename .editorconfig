# EditorConfig for BioSim4
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ files
[*.{cpp,cc,cxx,c,h,hpp}]
indent_style = space
indent_size = 2
max_line_length = 120

# Python files
[*.py]
indent_style = space
indent_size = 2
max_line_length = 120

# CMake files
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# INI files (config files)
[*.ini]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false  # Two trailing spaces = line break
max_line_length = off

# Makefiles (legacy)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# GnuPlot files
[*.gp]
indent_style = space
indent_size = 2
